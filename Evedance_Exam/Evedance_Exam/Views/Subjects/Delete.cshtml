@model Subject
@{
    ViewData["Title"] = "Delete";
}

<div class="row mx-auto">
    <div class="col-12">
        <h3>Delete Subject</h3>
        <div class="d-flex justify-content-end mb-1">
            <a class="btn btn-outline-info btn-sm mx-2" asp-controller="Subjects" asp-action="Create">Create</a>
            <a class="btn btn-outline-danger btn-sm" asp-controller="Subjects" asp-action="Edit" asp-route-id="@Model.SubjectId">Edit</a>
        </div>
        <div id="placeholder"></div>
        <form method="post" asp-action="Delete" asp-controller="Subjects" asp-route-SubjectId="@Model.SubjectId" id="fSubjects"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#placeholder"s
              data-ajax-success="onSuccess">
            <div class="form-group row mb-1">

                @*<input type="hidden" asp-for="SubjectId" />*@

                <label asp-for="SubjectName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <label>@Model.SubjectName</label>

                </div>
            </div>

            <div class="form-group row mb-1">
                <label asp-for="SubjectCode" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <label>@Model.SubjectCode</label>

                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col">
                <a class="btn btn-outline-dark" asp-action="Index" asp-controller="Subjects"><i class="bi bi-layer-backward "></i>Back to Index</a>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/jquery/jquery.validate.js"></script>
    <script src="~/libs/jquery/jquery.validate.unobtrusive.js"></script>
    <script src="~/libs/datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/libs/jquery/ajax/jquery.unobtrusive-ajax.js"></script>

    <script>
        function onSuccess() {
            $("#fSubjects").trigger('reset');
        }
    </script>

}