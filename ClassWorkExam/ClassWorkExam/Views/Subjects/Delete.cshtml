@model Subject
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3>Edit Subject</h3>
        <div id="placeholder"></div>
        <form method="post" asp-action="Delete" asp-controller="Subjects" asp-route-SubjectId="@Model.SubjectId" id="fSubjects"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#placeholder"
              data-ajax-success="onSuccess">
            <div class="form-group row mb-1">

                @*<input type="hidden" asp-for="SubjectId" />*@

                <label asp-for="SubjectName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <label>@Model.SubjectName</label>

                </div>
            </div>

            <div class="form-group row mb-1">
                <label asp-for="SubCode" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <label>@Model.SubCode</label>

                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </div>
        </form>
        <div class="col-12">
            @Html.ActionLink("Back to list", "Index")
        </div>
    </div>
</div>


@section scripts {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/jquery/jquery.validate.js"></script>
    <script src="~/libs/jquery/jquery.validate.unobtrusive.js"></script>
    <script src="~/libs/datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/libs/jquery/ajax/jquery.unobtrusive-ajax.js"></script>

    <script>
        function onSuccess() {
            $("#fSubjects").trigger('reset');
        }
    </script>

}